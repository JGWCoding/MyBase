<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/photo_fragment_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/back_arrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/photo_fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="Add Photos"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/photo_fragment_back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/photo_fragment_photo1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="Photo 1"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo_fragment_title" />

    <LinearLayout
        android:id="@+id/photo_fragment_l1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="@color/yellow_aplah33"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo_fragment_photo1">

        <ImageView
            android:id="@+id/photo_fragment_img1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/upload_photo" />
    </LinearLayout>

    <TextView
        android:id="@+id/photo_fragment_photo2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="Photo 2"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo_fragment_l1" />

    <LinearLayout
        android:id="@+id/photo_fragment_l2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="@color/yellow_aplah33"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photo_fragment_photo2">

        <ImageView
            android:id="@+id/photo_fragment_img2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/upload_photo" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>