<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/description_background"
    android:layout_marginVertical="3dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:gravity="center_vertical"
        android:layout_height="35dp">
        <TextView
            android:id="@+id/labour3_plant_item"
            android:hint="Plants Items"
            android:drawableRight="@drawable/arrow_down"
            android:layout_width="0dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/labour3_plant_type"
            android:layout_marginHorizontal="10dp"
            android:hint="Items Type"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:drawableRight="@drawable/arrow_down"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/labour3_quantity"
            android:hint="Quantity"
            android:layout_width="0dp"
            android:singleLine="true"
            android:inputType="number"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@null"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/labour3_del"
            android:layout_marginTop="-3dp"
            android:layout_gravity="top"
            android:src="@drawable/delete_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="5dp"
        android:gravity="center_vertical"
        android:layout_height="30dp">
        <EditText
            android:id="@+id/labour3_owner"
            android:hint="Owner"
            android:layout_width="0dp"
            android:singleLine="true"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:background="@null"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/labour3_plant_model"
            android:hint="Model No."
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="10dp"
            android:drawableRight="@drawable/arrow_down"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Switch
            android:id="@+id/labour3_plant_switch"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:maxWidth="100dp"
            android:minWidth="90dp"
            android:layout_height="wrap_content"
            android:text="W" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginHorizontal="5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical"
        android:layout_height="30dp">
        <TextView
            android:hint="Decription"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/labour3_description"
            android:hint="Type Description"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>